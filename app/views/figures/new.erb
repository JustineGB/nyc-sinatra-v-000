<h1>Add a New Figure:</h1>
<form action="/figures" method="POST">
  <label>Historical Figure:</label><input type="text" name="figure[name]"><br></br>

  <label>Choose an existing title:</label>
    <% Title.all.each do |title|%>
      <input id="<%= title.name %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>">
      <%=title.name%></input>
    <% end %><br></br>
  <label>and/or, create a new title:</label><br></br>
  <label>Title:</label><input type="text" name="title[name]"></input><br></br>

  <label>Choose an existing landmark:</label>
    <% Landmark.all.each do |landmark|%>
      <input id="<%= landmark.name %>" type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id %>">
      <%=landmark.name%></input>
    <% end %><br></br>
  <label>and/or, create a new landmark:</label><br></br>
  <label>Landmark:</label><input type="text" name="landmark[name]"></input><br></br>

<input type="submit" name="Create" value="Create">
</form>
